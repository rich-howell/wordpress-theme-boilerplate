<?xml version="1.0"?>
<ruleset name="{{ THEME_NAME }} WordPress Standards">

  <!-- Use the WordPress Extra coding standard -->
  <rule ref="WordPress-Extra"/>
  
  <file>src</file>

  <exclude-pattern>**/vendor/**</exclude-pattern>
  <exclude-pattern>**/src/assets/js/**</exclude-pattern>
  <exclude-pattern>**/src/assets/css/**</exclude-pattern>
  <exclude-pattern>**/stubs/**</exclude-pattern>
  <exclude-pattern>**/node_modules/**</exclude-pattern>
  <exclude-pattern>**/build/**</exclude-pattern>
  <exclude-pattern>**/advanced-custom-fields-config/**</exclude-pattern>  

  <!-- Optional: Disable Yoda condition warnings -->
  <rule ref="Generic.ControlStructures.DisallowYodaConditions"/>
</ruleset>
